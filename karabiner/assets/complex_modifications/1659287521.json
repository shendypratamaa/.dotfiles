            "simultaneous_options": {
              "key_down_order": "strict",
              "key_up_order": "strict_inverse",
              "to_after_key_up": [
                {
                  "set_variable": {
                    "name": "simple_vi_mode",
                    "value": 0
                  }
                }
              ]
            },
            "modifiers": {
              "optional": [
                "any"
              ]
            }
