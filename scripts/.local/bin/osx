#!/bin/bash

set -e

__open_current() {
	open "$@"
}

__help() {
	cat <<-_EOF_
		OSX Utils ğŸ’»

		pattern osx [cmd | path] :
		-c --current open curent directory
		-p --path open specified path
		-h --help help information
	_EOF_
}

if [ "$1" = "-c" ] || [ "$1" = "--current" ]; then
	__open_current .
elif [ "$1" = "-p" ] || [ "$1" = "--path" ]; then
	__open_current "$2"
elif [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
	__help
	exit
elif [ -n "$1" ]; then
	echo "osx not found ğŸ™…"
	echo "osx -help for information ğŸ’"
	exit
else
	echo "osx not found ğŸ™…"
	echo "osx -help for information ğŸ’"
fi
