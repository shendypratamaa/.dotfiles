#!/bin/bash

set -e

youtube="https://youtube.com/results?search_query="
piped="https://piped.kavin.rocks/results?search_query="
music="https://listen.whatever.social/search/"
google="https://www.google.com/search?q="
reddit="https://www.reddit.com/search/?q="
stackoverflow="https://stackoverflow.com/search?q="
github="https://github.com/search?q="

search() {
	open -a Brave\ Browser "$*"
}

youtube() {
	search "$youtube$*"
}

piped() {
	search "$piped$*"
}

music() {
	search "$music$*"
}

google() {
	search "$google$*"
}

github() {
	search "$github$*&type=repositories"
}

stackoverflow() {
	search "$stackoverflow$*"
}

reddit() {
	search "$reddit$*"
}

help() {
	cat <<-_EOF_
		Browser Search Utils 0.0.1 🌏 | (brave)

		search [command|args] :
			-h --help for help information
			-v --version for version information
			[-gt || github] github search repositories
			[-go || google] google search
			[-yt || youtube] youtube search
			[-pi || piped] youtube alternative less distraction
			[-ps || music] youtube music alternative
			[-rd || reddit] reddit content
		  [-st || stackoverflow] stackoverflow content
	_EOF_
}

version() {
	cat <<-_EOF_
		Browser Search Utils 0.0.1 🌏
	_EOF_
}

if [ "$1" == "-gt" ] || [ "$1" == "github" ]; then
	github "${@:2}"
	exit
fi

if [ "$1" == "-go" ] || [ "$1" == "google" ]; then
	google "${@:2}"
	exit
fi

if [ "$1" == "-pi" ] || [ "$1" == "piped" ]; then
	piped "${@:2}"
	exit
fi

if [ "$1" == "-yt" ] || [ "$1" == "youtube" ]; then
	youtube "${@:2}"
	exit
fi

if [ "$1" == "-ps" ] || [ "$1" == "music" ]; then
	music "${@:2}"
	exit
fi

if [ "$1" == "-rd" ] || [ "$1" == "reddit" ]; then
	reddit "${@:2}"
	exit
fi

if [ "$1" == "-st" ] || [ "$1" == "stackoverflow" ]; then
	stackoverflow "${@:2}"
	exit
fi

if [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	version
	exit
fi

if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	help
	exit
fi

if [ -n "$1" ]; then
	echo "search -h for help 💁"
	exit
fi

echo "search -h for help 💁"
echo "pattern search [command|args] 🔼"
