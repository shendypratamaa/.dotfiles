#!/bin/bash

wallpath="$HOME/pix/wallpaper/"

num="1\n2\n3\n4\n5\n6\n7\n8\n9"

__change_wall() {
	cmd="$(fd . "$wallpath" -t f | awk '{print $1}' | fzf --prompt="ðŸ‘‰ image > ")"
	screen="$(echo -e $num | fzf --prompt=" screen > ")"
	desktop-image-switcher "$cmd" "$screen" 2 >/dev/null
}

__change_wall "${@:2}"
