# EXA
TREE_IGNORE="cache|log|logs|node_modules|vendor"
alias ls="exa --group-directories-first --icons"
alias la="ls -a"
alias ll="ls --git -lah "
alias lt='ls --tree -D -L 2 -I ${TREE_IGNORE}'
alias npml="npm list --location=global --depth=0"

# ZSH
alias src="source ~/.config/zsh/.zshrc"
alias zshrc="$EDITOR ~/.config/zsh/.zshrc"

# GIT
alias lg="lazygit"

# BREW SERVICES
alias srv="brew services"
alias rsrv="brew services restart --all"

# BREW BUNDLE
alias brewbundledump="brew bundle dump --desc --force --file=~/.config/brewfile/Brewfile"
alias brewbundleinstall="brew bundle -v --file=~/.config/brewfile/Brewfile"

# BREW PINNED
alias brewlistpin="brew list --pinned"

# BREW CLEAN
alias brewclean="brew cleanup --prune=all"

# NEOVIM
alias vi="$EDITOR"

# TMUX
alias tmuxconf="$EDITOR ~/.config/tmux/tmux.conf"
alias ide="tmux split-window -h -p 35 && tmux select-pane -t 0"
alias ta='tmux attach -t'
alias tad='tmux attach -d -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'
alias tksv='tmux kill-server'
alias tkss='tmux kill-session -t'

# open current pwd
alias ofd="open ."

# default commandline
alias cp="cp -v -i"
alias mv="mv -v -i"
alias rm="rm -v -i"
alias ln="ln -v"
alias mkdir="mkdir -p"

# easier to read disk
alias df="df -h"
alias du="du -sh"

# system information
alias btw="neofetch"

# kitty
alias kittyimage="kitty +kitten icat"
alias kittyconf="$EDITOR ~/.config/kitty/kitty.conf"

# python
alias pyls="ls ~/.local/share/pyenv/versions/"

# Extends GNU Utils

# check path
alias cmpath="/usr/libexec/path_helper | tr ':' '\n' "
