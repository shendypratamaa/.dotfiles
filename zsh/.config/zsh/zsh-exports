#!/bin/sh

# NVM
export NVM_DIR="/opt/homebrew/bin"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# PATH
# BREW
# (M1)    /opt/homebrew/bin /opt/homebrew/sbin
# (INTEL) /usr/local/bin /usr/local/sbin
eval "$(/opt/homebrew/bin/brew shellenv)"

# FPATH
export FPATH="/opt/homebrew/share/zsh/site-functions"

# MANPATH
export MANPATH="/opt/homebrew/share/man"

# MYSCRIPT
export PATH="$HOME/.local/bin:$PATH"

# EDITOR
export EDITOR="nvim"

# TMUX
export TMUX_CONF="$XDG_CONFIG_HOME/tmux/tmux.conf"

# GIT
export GIT_CONFIG_GLOBAL="$XDG_CONFIG_HOME/git/config"

# HOMEBREW
export HOMEBREW_BREWFILE="$XDG_CONFIG_HOME/brewfile/Brewfile"

# TERMINFO
export TERMINFO="$XDG_DATA_HOME/terminfo"
export TERMINFO_DIRS="$XDG_DATA_HOME/terminfo:/usr/share/terminfo"

# LESS
export LESSHISTFILE="$XDG_CACHE_HOME/less/history"

# NODE
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node/.node_repl_history"

# GEM
export GEM_HOME="${XDG_DATA_HOME}/gem"
export GEM_SPEC_CACHE="${XDG_CACHE_HOME}/gem"

# DISPLAY
export DISPLAY=:0
